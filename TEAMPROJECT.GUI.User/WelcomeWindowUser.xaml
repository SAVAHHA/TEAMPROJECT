<Window x:Class="TEAMPROJECT.GUI.User.WelcomeWindowUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEAMPROJECT.GUI.User"
        mc:Ignorable="d"
         Title="UserWelcomeWIndow" Height="200" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2" Margin="10 15" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Bottom">Войдите в аккаунт или зарегистрируйтесь</TextBlock>
        <Button Name="EnterAccountButton" Grid.Row="1" Margin="30,46,30,15" FontSize="15" Click="EnterAccountButton_Click">Войти</Button>
        <Button Name="RegistrationButton" Grid.Row="1" Grid.Column="1" Margin="30 15" FontSize="15" Click="RegistrationButton_Click" Background="Fuchsia">Зарегистрироваться</Button>

    </Grid>
</Window>

